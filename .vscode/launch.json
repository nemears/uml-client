    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "mocha",
            "runtimeArgs": [
                "${workspaceRoot}/node_modules/.bin/mocha",
                "${workspaceRoot}/test/**/*.js",
                "--recursive", 
                "--timeout",
                "60000" ,
                "--exit"
